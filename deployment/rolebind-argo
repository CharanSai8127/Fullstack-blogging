apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: argocd-deployment-rolebinding
  namespace: default  # RoleBinding for the default namespace
subjects:
  - kind: ServiceAccount
    name: argocd-service-account
    namespace: argocd  # ServiceAccount exists in the argocd namespace
roleRef:
  kind: Role
  name: argocd-deployment-role
  apiGroup: rbac.authorization.k8s.io

---
apiVersion: rbac.authorization.k8s.io/v1
